/* Generic adapter class */

export class Dog {
    constructor() {
        this.name = "Dog";
    }

    bark(): string {
        return "woof!";
    }
}

export class Cat {
    constructor() {
        this.name = "Cat"
    }

    meow(): string {
        return "meow!";
    }
}

export class Human {
    constructor() {
        this.name = "Human";
    }

    speak(): string {
        return "'hello'";
    }
}

export class Car {
    constructor() {
        this.name = "Car";
    }

    makeNoise(octaneLevel): string {
        return "vroom " + octaneLevel;
    }
}

export class Adapter{
    constructor(obj:any, adaptedMethod:string, ...args){
       this.name = obj.name;
       this.args = args;
       this.adaptedMethod = obj[adaptedMethod];
    }

    makeNoise(){
        return this.adaptedMethod(this.args);
    }
}